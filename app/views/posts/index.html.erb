<p id="intro" xmlns="http://www.w3.org/1999/html">
  <% if user_signed_in? %>
    <%= t('hello') %>
    <%= current_user.email %>
    <br>
  <% end %>
  <span><%= t('share_smth_interesting') %></span>
</p>
<div id = "posts">
  <% @posts.each do |post| %>
      <div class="post">
        <div class="post_image">
          <%= link_to(image_tag(post.image.url(:small)), post) %>
        </div>
        <div class="post_content">
          <div class="title"><h2><%= link_to(post.title, post) %></h2></div>
          <div class="data">
            <div class="clearfix">
              <p class="buttons">
                <span>
                  <i class="fa fa-comments-o">  <%= t('comments') %><%= post.comments.count %></i>
                </span>
                <span>
                  <i class="fa fa-sort">  <%= t('karma') %><%= post.get_likes.size - post.get_dislikes.size %></i>
                </span>
              </p>
            </div>
          </div>
        </div>
      </div>
  <% end %>
</div>